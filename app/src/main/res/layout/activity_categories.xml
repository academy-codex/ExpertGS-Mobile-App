<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_3"
    tools:context="com.expertgs.expertgs.Activities.Categories">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                android:layout_marginRight="3dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/about"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="ABOUT"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#082d64"
                    android:textAlignment="center"
                    android:layout_marginBottom="4dp"/>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="3dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/software"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textStyle="bold"
                    android:text="SOFTWARE"
                    android:textSize="16sp"
                    android:textColor="#082d64"
                    android:textAlignment="center"
                    android:layout_marginBottom="4dp"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                android:layout_marginRight="3dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/car"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="CONNECTED CARS"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor=" #082d64"
                    android:textAlignment="center"
                    android:layout_marginBottom="4dp"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="3dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/strategy"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="CONSULTING"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#082d64"
                    android:textAlignment="center"
                    android:layout_marginBottom="4dp"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                android:layout_marginRight="3dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/mech"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Mechanical"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#082d64"
                    android:textAlignment="center"
                    android:layout_marginBottom="4dp"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="3dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/electronics"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Embedded Systems"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#082d64"
                    android:textAlignment="center"
                    android:layout_marginBottom="4dp"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
